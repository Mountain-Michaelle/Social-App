{
    "builds" : [
        {
        "src": "social_app/wsgi.py",
        "use": "@vercel/python",
        "config": {"maxLambdaSize": "15mb", "runtime": "python3.9", "buidCommand": "bash build.sh"}
        }
],

"scripts": {
    "build": "apt-get update && apt-get install -y libsdl1.2-dev libfreetype6-dev && pip install -r requirements.txt"
  },
    "routes": [ 
        {
            "src": "/(.*)",
            "dest": "social_app/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        }
    ]
}